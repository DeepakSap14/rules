{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "packages",
  "projects": {
    "aribaui": {
      "root": "",
      "sourceRoot": "src",
      "projectType": "application",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist",
            "index": "src/index.html",
            "main": "src/playground/main.ts",
            "tsConfig": "src/tsconfig.app.json",
            "showCircularDependencies": false,
            "polyfills": "src/polyfills.ts",
            "assets": [
              "src/playground/assets",
              "src/favicon.ico",
              {
                "glob": "**/*",
                "input": "src/playground/assets/images",
                "output": "/playground/assets/images"
              },
              {
                "glob": "**/*",
                "input": "src/playground/assets/data",
                "output": "/playground/assets/data"
              }
            ],
            "styles": [
              "src/playground/assets/themes/_normalize.scss",
              "node_modules/prismjs/themes/prism.css",
              "node_modules/primeicons/primeicons.css",
              "node_modules/primeng/resources/primeng.min.css",
              "node_modules/font-awesome/css/font-awesome.min.css",
              "node_modules/quill/dist/quill.core.css",
              "node_modules/quill/dist/quill.snow.css",
              "src/playground/assets/fonts/sap-ariba-icon-fonts/sap-ariba-icon-fonts.css",
              "src/playground/assets/fonts/sap-icon-fonts/sap-icon-fonts.css",
              "src/lib/resources/themes/ariba/theme.scss",
              "src/lib/resources/styles/aribaui.scss",
              "src/playground/styles.scss"
            ],
            "scripts": [
              "node_modules/prismjs/prism.js",
              "node_modules/quill/dist/quill.js"
            ]
          },
          "configurations": {
            "production": {
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "fileReplacements": [
                {
                  "replace": "src/./environments/environment.ts",
                  "with": "src/./environments/environment.prod.ts"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "aribaui:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "aribaui:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "aribaui:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/test.ts",
            "karmaConfig": "src/karma.conf.js",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "src/tsconfig.spec.json",
            "scripts": [
              "node_modules/prismjs/prism.js",
              "node_modules/quill/dist/quill.js"
            ],
            "styles": [
              "src/playground/assets/themes/_normalize.scss",
              "node_modules/prismjs/themes/prism.css",
              "node_modules/primeicons/primeicons.css",
              "node_modules/primeng/resources/primeng.min.css",
              "node_modules/font-awesome/css/font-awesome.min.css",
              "node_modules/quill/dist/quill.core.css",
              "node_modules/quill/dist/quill.snow.css",
              "src/playground/assets/fonts/sap-ariba-icon-fonts/sap-ariba-icon-fonts.css",
              "src/playground/assets/fonts/sap-icon-fonts/sap-icon-fonts.css",
              "src/lib/resources/themes/ariba/theme.scss",
              "src/lib/resources/styles/aribaui.scss",
              "src/playground/styles.scss"
            ],
            "assets": [
              "src/playground/assets",
              "src/favicon.ico",
              {
                "glob": "**/*",
                "input": "src/playground/assets/images",
                "output": "/playground/assets/images"
              },
              {
                "glob": "**/*",
                "input": "src/playground/assets/data",
                "output": "/playground/assets/data"
              }
            ]
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "src/tsconfig.app.json",
              "src/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    },
    "aribaui-e2e": {
      "root": "",
      "sourceRoot": "e2e",
      "projectType": "application",
      "architect": {
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "e2e/protractor.conf.js",
            "devServerTarget": "aribaui:serve"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "e2e/tsconfig.e2e.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    },
    "core": {
      "root": "packages/core",
      "sourceRoot": "packages/core/src",
      "projectType": "library",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "packages/core/tsconfig.lib.json",
            "project": "packages/core/ng-package.json"
          },
          "configurations": {
            "production": {
              "project": "packages/core/ng-package.prod.json"
            }
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "packages/core/test.ts",
            "tsConfig": "packages/core/tsconfig.spec.json",
            "karmaConfig": "packages/core/karma.conf.js",
            "assets": [
              {
                "glob": "**/*",
                "input": "packages/core/test/assets",
                "output": "/assets"
              }
            ]
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "packages/core/tsconfig.lib.json",
              "packages/core/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    },
    "components": {
      "root": "packages/components",
      "sourceRoot": "packages/components/src",
      "projectType": "library",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "packages/components/tsconfig.lib.json",
            "project": "packages/components/ng-package.json"
          },
          "configurations": {
            "production": {
              "project": "packages/components/ng-package.prod.json"
            }
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "packages/components/test.ts",
            "tsConfig": "packages/components/tsconfig.spec.json",
            "karmaConfig": "packages/components/karma.conf.js",
            "scripts": [
              "node_modules/prismjs/prism.js",
              "node_modules/quill/dist/quill.js"
            ],
            "assets": [
              {
                "glob": "**/*",
                "input": "packages/components/test/assets",
                "output": "/assets"
              }
            ]
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "packages/components/tsconfig.lib.json",
              "packages/components/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "aribaui",
  "schematics": {
    "@schematics/angular:class": {
      "spec": false
    },
    "@schematics/angular:component": {
      "prefix": "playground",
      "styleext": "scss"
    },
    "@schematics/angular:directive": {
      "prefix": "playground"
    }
  }
}
